<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:colorEdgeEffect">#ff1976d2</item>
    </style>

    <style name="AppTheme.TransparentWindow">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.MainMenu">
        <item name="colorPrimaryDark">#004ba0</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorTransperentMainMenuActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BarTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="ConOver" >
        <item name="android:windowContentOverlay">@null</item>
    </style>




    <style name="MpdPlayerActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="title_article">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_article">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="title_community">
        <item name="android:textColor">@color/colorTitleCommunity</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="comment">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="author">
        <item name="android:textColor">@color/colorCommentAuthor</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="score">
        <item name="android:textColor">@color/colorTitleArticle</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="date">
        <item name="android:textColor">@color/colorTitleArticle</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/colorTitleMainWindow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubTitle">
        <item name="android:textColor">@color/colorTitleMainWindow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainMenu">
        <item name="android:textColor">@color/colorTitleMainWindow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorMenuIcon</item>
    </style>

    <style name="search">
        <item name="android:textColor">@color/colorSearchText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorSearchBackground</item>
    </style>

    <style name="search_hint">
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="reddit_feeds">
        <item name="android:textColor">@color/colorRedditFeeds</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="reddit_feeds_list">
        <item name="android:textColor">@color/colorRedditFeedsList</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="reddit_subscription_list">
        <item name="android:textColor">@color/colorSubscriptionList</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="community_list_title">
        <item name="android:textColor">@color/colorCommunityListTitle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="community_list_author">
        <item name="android:textColor">@color/colorCommunityListAuthor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="question_button_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="community_list_comment">
        <item name="android:textColor">@color/colorCommunityListComment</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchMenu">
        <item name="android:textColor">@color/colorSearchMenu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:visibility">gone</item>
    </style>

    <style name="subreddit">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTitleArticle</item>
    </style>

    <style name="MyPopupTheme" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:textColorSecondary">#ff1976d2</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:popupBackground">#ffffffff</item>
        <item name="colorAccent">#ff1976d2</item>
    </style>

</resources>
